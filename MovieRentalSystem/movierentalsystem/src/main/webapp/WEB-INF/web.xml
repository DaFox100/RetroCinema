<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>MoviesServlet</servlet-name>
        <servlet-class>com.movierental.MoviesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MoviesServlet</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>
    <servlet>
         <servlet-name>RentServlet</servlet-name>
         <servlet-class>com.movierental.RentServlet</servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>RentServlet</servlet-name>
    <url-pattern>/RentServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>AccountServlet</servlet-name>
    <servlet-class>com.movierental.AccountServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AccountServlet</servlet-name>
    <url-pattern>/account</url-pattern>
</servlet-mapping>


<servlet>
  <servlet-name>ReturnServlet</servlet-name>
  <servlet-class>com.movierental.ReturnServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ReturnServlet</servlet-name>
  <url-pattern>/ReturnServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>RemoveHistoryServlet</servlet-name>
    <servlet-class>com.movierental.RemoveHistoryServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>RemoveHistoryServlet</servlet-name>
    <url-pattern>/removeHistory</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>CreateAccountServlet</servlet-name>
    <servlet-class>com.movierental.CreateAccountServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>CreateAccountServlet</servlet-name>
    <url-pattern>/CreateAccountServlet</url-pattern>
</servlet-mapping>


   <!-- Default welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


</web-app>



